{
	"compilerOptions": {
		"allowJs": true,
		"strictNullChecks": true,
		"alwaysStrict": true,
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"module": "commonjs",
		"target": "es2017"
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}
